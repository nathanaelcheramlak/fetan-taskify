{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "rootDir": "./api",
    "outDir": "./dist"
  },
  "include": ["api/**/*"],
  "exclude": ["node_modules", "dist"]
}
